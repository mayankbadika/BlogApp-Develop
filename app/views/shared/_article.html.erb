<% obj.each do |article| %>
  <div class="col d-flex justify-content-center">
    <div class="card flex-row" style="width:50rem;margin-bottom:.50rem;border-color: #2E2F30">
      <% if article.avatar.attached? %>
        <img class="card-img-left example-card-img-responsive" src="<%=(url_for(article.avatar)) %>" alt="Card image cap" height="200" width="150">
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to article.title, article_path(article),class:"nav-link" %></h5>
        <p class="card-text lh-sm font-monospace"><%= truncate(article.body, length: 100) %></p>
          <div class="article-meta-details">
            <small>Created by: <%= article.user.username if article.user %>,
              <%= time_ago_in_words(article.created_at) %> ago,
              last updated: <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        <div class="article-actions">
          <% if logged_in?%>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>


<% end %>
