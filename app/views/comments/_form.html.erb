<%=form_with model: [@article,@article.comments.build] do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :commenter,{ class: "form-label"} %>
        <%= form.text_field :commenter,{ class: "form-control", placeholder: "Name" } %>
      </div>
      <div class="mb-3">
        <%= form.label :body,{ class: "form-label"} %>
        <%= form.text_area :body,{ class: "form-control", placeholder: "Comment" } %>
      </div>
      <div>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<%end %>
